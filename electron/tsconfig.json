{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "../dist/electron",
    "rootDir": "..",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": false,
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    ".",
    "../shared/types/**/*"
  ]
}