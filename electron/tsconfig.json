{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["DOM", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "outDir": "../dist/electron",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@shared/*": ["../shared/*"]
    },
    "types": ["electron", "node"],
    "typeRoots": [
      "./types",
      "../node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts",
    "../shared/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}