{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "../dist/electron",
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmit": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    ".",
    "../shared/**/*"
  ]
}